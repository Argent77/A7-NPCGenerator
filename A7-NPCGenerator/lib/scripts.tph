// Script block added to area scripts for character creation
<<<<<<<< .../inlined/a7-npcgenerator/create_script.baf
IF
  Global("A7CHR-%chr_resref%-CREATED","GLOBAL",0)
  OR(2)
    GlobalLT("A7CHR-MOVESTAGE","GLOBAL",%move_stage%)
    Global("A7CHR-MOVESTAGE","GLOBAL",%move_stage%)
  %extra_trigger%
THEN
  RESPONSE #100
    SetGlobal("A7CHR-%chr_resref%-CREATED","GLOBAL",1)
    SetGlobal("A7CHR-%chr_resref%-MOVED","MYAREA",1)
    CreateCreature("%chr_resref%",[%are_x%.%are_y%],%are_dir%)
    Continue()
END
