// Script block added to area scripts for moving NPCs to another map
<<<<<<<< .../inlined/a7-npcgenerator/move_script.baf
IF
  Global("A7CHR-%chr_resref%-MOVED","MYAREA",0)
  !Global("A7CHR-%chr_resref%-CREATED","GLOBAL",0)
  OR(2)
    GlobalLT("A7CHR-MOVESTAGE","GLOBAL",%move_stage%)
    Global("A7CHR-MOVESTAGE","GLOBAL",%move_stage%)
  !InParty("A7CHR-%chr_resref%")
  !StateCheck("A7CHR-%chr_resref%",CD_STATE_NOTVALID)
  !AreaCheckObject("%are_resref%","A7CHR-%chr_resref%")
  %extra_trigger%
THEN
  RESPONSE #100
    SetGlobal("A7CHR-%chr_resref%-MOVED","MYAREA",1)
    MoveGlobal("%are_resref%","A7CHR-%chr_resref%",[%are_x%.%are_y%])
    ActionOverride("A7CHR-%chr_resref%",Face(%are_dir%))
    Continue()
END
